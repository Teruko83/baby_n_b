<!-- contient Profile du bebe et bouton book -->
<!-- vu du point de vue de utilisateur -->
<div class="container">
<div class="card-trip">
  <%= cl_image_tag @baby.photo %>

  <div class="card-trip-infos">
    <div>
      <h2><%= @baby.first_name %>'s Profil</h2>
      <h4>Date of birth</h4>
      <p><%= @baby.date_of_birth %></p>
      <h4>Category</h4>
      <p><%= @baby.category %></p>
        <h4>Description</h4>
      <p><%= @baby.bio %></p>

    </div>
    <h2 class="card-trip-pricing"><%= @baby.price %></h2>
    <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
  </div>
</div>






  <%= link_to "Book this baby",  new_baby_booking_path(@baby), class: "btn btn-primary" %>
  <% if current_user == @baby.user %>
    <%= link_to "Update",  edit_baby_path, class: "btn btn-primary" %>
    <%= link_to "Delete", baby_path(@baby), :method => 'delete', class: "btn btn-primary"  %>
  <% end %>

</div>
