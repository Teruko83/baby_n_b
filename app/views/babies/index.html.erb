<div class="banner" style=" background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1><strong>Baby'n'B </strong>brings all your wishes to life!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>


<div class="container">
  <h2>Babies available</h2>
  <div class="cards">
    <% @babies.each do |baby| %>

     <%= link_to baby_path(baby.id) do %>

      <div class="card-trip">

        <%= cl_image_tag baby.photo, height: 300, width: 400, crop: :fill %>

          <div class="card-trip-infos">
            <div>
              <h2><%= baby.first_name %></h2>
              <p><strong>Date of birth: </strong><%= baby.date_of_birth %></p>
              <p><strong>Type of baby: </strong><%= baby.category %></p>
            </div>
            <h2 class="card-trip-pricing"> <%= baby.price %> $/h</h2>
            <%= cl_image_tag baby.photo, class: "card-trip-user avatar-bordered"  %>
          </div>

      </div>

      <% end %>
    <% end %>

  </div>

</div>

<div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAP_API_KEY'] %>"
  ></div>

